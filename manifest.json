{

  "manifest_version": 2,
  "name": "PasswordChecker",
  "version": "1.0",
  
  "background": {
    "scripts": [
      "src/js/background.js"
    ]
  },

  "browser_action": {
    "default_title": "PasswordChecker",
    "default_popup": "src/index.html",
    "default_icon": "src/static/lock.png"
  },

  "content_scripts": [{
    "css": [
      "src/css/content.css"
    ],
    "js": [
      "src/js/content.js"
    ],
    "matches": [
      "*://*/*"
    ]
  }]
	
}